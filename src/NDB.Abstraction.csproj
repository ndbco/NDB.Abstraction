<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net8.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>

		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>NDB.Abstraction</PackageId>
		<Version>1.0.0</Version>
		<Authors>Ilyasin Hafid</Authors>
		<Company>PT Navigate Digital Boundaries</Company>

		<IsPackable>true</IsPackable>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		
		<Description>
			Framework-agnostic request and result contracts for modern .NET applications.
		</Description>

		<PackageTags>abstraction request result dto dotnet</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/ndbco/NDB.Abstraction</RepositoryUrl>
		<PackageProjectUrl>https://github.com/ndbco/NDB.Abstraction</PackageProjectUrl>
	</PropertyGroup>
	<ItemGroup>
		<None Include="..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>
</Project>
